{
  "name": "react-native-simple-crypto",
  "version": "0.2.15",
  "description": "A simpler React-Native crypto library",
  "main": "index.js",
  "author": "Gary Button <gary.button.public@gmail.com>",
  "homepage": "https://github.com/ghbutton/react-native-simple-crypto",
  "license": "MIT",
  "keywords": [
    "react-native",
    "react-component",
    "ios",
    "android",
    "aes",
    "crypto",
    "mobile",
    "async",
    "sha1",
    "sha256",
    "sha512",
    "pbkdf2",
    "hmac256",
    "rsa",
    "random",
    "randomBytes"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghbutton/react-native-simple-crypto.git"
  },
  "bugs": {
    "url": "https://github.com/ghbutton/react-native-simple-crypto/issues"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test-app:install": "cd test-app && npm install",
    "test-app:ios": "cd test-app && npm run ios",
    "test-app:android": "cd test-app && npm run android",
    "test-app:start": "cd test-app && npm start"
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "hex-lite": "^1.5.0"
  },
  "devDependencies": {
    "@testing-library/react-native": "^12.4.2",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "react-test-renderer": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-simple-crypto)/)"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    }
  }
}
